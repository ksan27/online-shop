<div class="contents row">
  <div class="container">
    <h2>- Log in -</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
     <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, {autofocus: true, class: "form"} %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, {autocomplete: "off", class: "form"} %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", {class: "submit"}%>
      </div>
      <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post%>
    <% end %>
    <%= link_to "Back", root_path, class: "user-back" %>
  </div>
</div>