<div class="contents row">
  <div class="container">
    <h2>- Edit -</h2>
    <%= form_with(model: @shop, id: 'new_user', class: 'new_user', local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object%>
    <%# イメージ %>
      <div class="image-text">
        *イメージ画像
      </div>
    <div class="img-upload">
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, {id:"item-image", class: "file-form"} %>
      </div>
       <div id="image-preview"></div>
    </div>
    <%# イメージ %>
      <div class="field">
        *<%= f.label :genre_id %><br />
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
      </div>

      <div class="field">
        *<%= f.label :name %><br />
        <%= f.text_field :name, {class: "form"} %>
      </div>

      <div class="field">
        *<%= f.label :shop_url %><br />
        <%= f.text_field :shop_url, {class: "text-form"} %>
      </div>

      <div class="actions">
        <%= f.submit "アップデート", {class: "submit"}%>
      </div>
      
      <div class="attention-message">
        <p>「*」マークは必須項目になります。</p>
      </div>
    <% end %>
    <%= link_to "Back", shop_path(@shop.id), class: "user-back" %>
  </div>
</div>